{
  "manifest_version": 3,
  "name": "Gmail Trusted Domain Login",
  "version": "1.1",
  "description": "Restrict Gmail logins to @precihole.in",
  "permissions": ["declarativeNetRequest", "storage", "tabs"],
  "host_permissions": ["*://accounts.google.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://accounts.google.com/*"],
      "js": ["content.js"],
      "css": ["custom-alert.css"],  // Inject CSS here
      "run_at": "document_end"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "block_gmail",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  }
}
